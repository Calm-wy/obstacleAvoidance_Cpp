<launch>
    <!-- Filter manager -->
    <node pkg="nodelet" type="nodelet" name="pcl_manager_crop" args="manager" output="screen" />

    <!-- Run a crop box filter -->
    <node pkg="nodelet" type="nodelet" name="crop_box" args="load pcl/CropBox pcl_manager" output="screen">
        <remap from="~input" to="/cloud_for_static" />
        <remap from="~output" to="/cloud_for_static_no_arm" />
        <rosparam>
            <!-- We define a bounding box that encloses the Ridgeback
                 to remove all parasite points generated by the LIDAR
                 beams hitting the UR-5 robot arm if it is deployed.
                 Initially this filter keeps only what is inside the box
                 but with the negative to true  it keeps what is outside -->
            /crop_box/min_x: -0.1
            /crop_box/min_y: -0.42
            /crop_box/min_z: -1
            /crop_box/max_x:  1.2
            /crop_box/max_y:  0.42
            /crop_box/max_z:  0.2
            /crop_box/negative: true
        </rosparam>
    </node>
</launch>
