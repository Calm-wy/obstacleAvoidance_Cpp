<?xml version="1.0"?>
<robot name="simple_example">


  <link name="base_link">
  
    <inertial>
        <mass value="0.01" />
        <inertia ixx="0.4" ixy="0.0" ixz="0.0" iyy="0.4" iyz="0.0" izz="0.2"/>
    </inertial>
   <!-- <collision>
      <geometry>
        <cylinder radius="0.05" length="0.24" />
      </geometry>
        </collision>-->
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.24" />
      </geometry>
    </visual>
  </link>

  <link name="second_link">
    <inertial>
        <mass value="0.01" />
        <inertia ixx="0.0002835" ixy="0.0" ixz="0.0" iyy="0.0002835" iyz="0.0" izz="0.000324" />
    </inertial>
    <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0" />
    <!--<collision>
      <geometry>
        <box size="0.05 0.05 0.15" />
      </geometry>
    </collision>-->
    <visual>
      <geometry>
         <mesh filename="model://person_standing/meshes/standing.dae" scale="1 1 1"/>
      </geometry>
<!--
      <geometry>
        <box size="0.05 0.05 0.15" />
      </geometry>-->
    </visual>
  </link>

  <link name="dummy_Y">
    <inertial>
        <mass value="0.01" />
        <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001" />
    </inertial>
  </link>

  <!--<joint name="base_to_second_joint" type="revolute">
    <parent link="base_link"/>
    <child link="second_link"/>
    <axis xyz="1 0 0"/>
    <origin xyz="0.0 0.0 0.2" rpy="0.0 0.0 0.0"/> 
    <limit lower="-1.57" upper="1.57" effort="1" velocity="3"/>
  </joint> -->


  <joint name="base_to_second_joint_X" type="prismatic">
    <parent link="base_link"/>
    <child link="dummy_Y"/>
    <axis xyz="1 0 0"/>
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/> 
    <limit lower="-5" upper="5" effort="1000" velocity="1"/>
  </joint>

  <joint name="base_to_second_joint_Y" type="prismatic">
    <parent link="dummy_Y"/>
    <child link="second_link"/>
    <axis xyz="0 1 0"/>
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/> 
    <limit lower="-5" upper="5" effort="1000" velocity="1"/>
  </joint>


  <link name="world" />
  <joint name="world_joint"  type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="world"/>
    <child link="base_link"/>
  </joint>



  <!--                GAZEBO RELATED PART                             -->

  <gazebo reference="dummy_Y">
    <gravity>0</gravity>
  </gazebo>
  <gazebo reference="second_link">
    <gravity>0</gravity>
  </gazebo>

  <!-- ROS Control plugin for Gazebo -->
  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/</robotNamespace>
    </plugin>
  </gazebo>

  <!-- transmission -->
  <transmission name="base_to_second_trans_X">
    <type>transmission_interface/SimpleTransmission</type>
    <actuator name="motor1">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
    <joint name="base_to_second_joint_X">
      <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
    </joint>
  </transmission>

    <transmission name="base_to_second_trans_Y">
    <type>transmission_interface/SimpleTransmission</type>
    <actuator name="motor2">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
    <joint name="base_to_second_joint_Y">
      <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
    </joint>
  </transmission>

</robot>
